<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/gameevents">
    <action_sequence name="eventGSKadvanceTimeOnce">
      <!-- HELPGOOD: could just be this?
			<action class="TimeChange">
				<property name="time_preset" value="NextMorning" />
				<property name="time" value="0" />
			</action>
-->
      <action class="TimeChange" help="in game minutes, ends up in a non precise result end hour, that may be a nice thing :)">
        <property name="time_preset" value="Current"/>
        <property name="time" value="5-15"/>
      </action>
    </action_sequence>
    <action_sequence name="eventGSKrewindTimeToMoring">
      <action class="TimeChange">
        <property name="time_preset" value="Morning" help="ISSUE: fails: always advance to 22h or rewind if between 22h-24h only"/>
        <property name="time" value="0"/>
      </action>
    </action_sequence>
    <action_sequence name="eventGSKrewindTimeToNoon" help="works, advance if b4 12h, and rewind if after">
      <action class="TimeChange">
        <property name="time_preset" value="Noon"/>
        <property name="time" value="0"/>
      </action>
    </action_sequence>
    <action_sequence name="eventGSKrewindTimeToNight">
      <action class="TimeChange">
        <property name="time_preset" value="Night"/>
        <property name="time" value="0"/>
      </action>
    </action_sequence>
  </append>
</GhussakTweaks>
