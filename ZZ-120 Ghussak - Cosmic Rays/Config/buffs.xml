<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/buffs">
    <buff name="buffGSKNPCCosmicRayTrap" hidden="true" remove_on_death="true" help="ISSUE: zombies/animals/npcs do not check for _biomeradiation?">
