<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/nav_object_classes">
    <nav_object_class name="navSimpleDot">
      <map_settings>
        <property name="sprite_name" value="ui_game_symbol_enemy_dot"/>
        <property name="min_distance" value="0"/>
        <property name="max_distance" value="90"/>
        <property name="color" value="180,180,180,255"/>
        <property name="has_pulse" value="true"/>
        <property name="icon_clamped" value="false"/>
      </map_settings>
      <compass_settings>
        <property name="sprite_name" value="ui_game_symbol_enemy_dot"/>
        <property name="up_sprite_name" value="ui_game_symbol_enemy_dot_up"/>
        <property name="down_sprite_name" value="ui_game_symbol_enemy_dot_down"/>
        <property name="color" value="180,180,180,255"/>
        <property name="min_distance" value="0"/>
        <property name="max_distance" value="45"/>
        <property name="max_scale_distance" value="32"/>
        <property name="has_pulse" value="false"/>
        <property name="icon_clamped" value="false"/>
      </compass_settings>
      <onscreen_settings>
        <property name="sprite_name" value="ui_game_symbol_enemy_dot"/>
        <property name="min_distance" value="3"/>
        <property name="max_distance" value="30"/>
        <property name="color" value="180,180,180,255"/>
        <property name="has_pulse" value="true"/>
        <property name="text_type" value="Distance"/>
        <property name="offset" value="0,0,0"/>
        <property name="icon_clamped" value="false"/>
      </onscreen_settings>
    </nav_object_class>
  </append>
  <append xpath="/nav_object_classes/nav_object_class[@name='junk_turret']">
    <map_settings>
      <property name="sprite_name" value="ui_game_symbol_junk_turret"/>
    </map_settings>
  </append>
  <append xpath="/nav_object_classes/nav_object_class[@name='junk_sledge']">
    <map_settings>
      <property name="sprite_name" value="ui_game_symbol_junk_sledge"/>
    </map_settings>
  </append>
  <set xpath="/nav_object_classes/nav_object_class[@name='player']/map_settings/property[@name='color']/@value" help="to be easier to distinguish among the other icons we are placing on the map like workbench, bathtub, ok etc">0,255,255,255</set>
  <append xpath="/nav_object_classes/nav_object_class[@name='player']/map_settings">
    <property name="depth_offset" value="50" help="FAILED?"/>
    <property name="sprite_size" value="64" help="FAILED?"/>
  </append>
  <append xpath="/nav_object_classes/nav_object_class[@name='quick_waypoint']/map_settings" help="easier to see on max zoom out">
    <property name="sprite_size" value="64" help="FAILED?"/>
  </append>
</GhussakTweaks>
