<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/blocks/block[starts-with(@name,'plant') and not(contains(@name,'Dead'))]">
    <property name="BuffsWhenWalkedOn" value="buffGSKkillCrop" help="plantedAloe1 plantedYucca1 wont trigger this"/>
  </append>
  <!--
	HELPGOOD:CODEGEN:KILLPLANTS:TAGS  (sync with gameevents.xml)
IFS=$'#\n' read -d '' -r -a astrList < <(egrep '"plant[^"]*dead"' -\-include=*.xml * -iRhIao |tr -d '"' |sort -u);
astrList+=(plantedGoldenrod plantedChrysanthemum plantedMushroom)
for str in ${astrList[@]};do
	if [[ 
			"${str%Dead}" == plantHedge || 
			"${str%Dead}" == plantShrub 
	]];then
		echo -e '	<append xpath="/blocks/block[@name='"'"${str%Dead}"'"']"><property name="Tags" value="'${str%Dead}'"/></append>'
	else
		echo -e '	<append xpath="/blocks/block[@name='"'"${str%Dead}1"'"']/property[@name='"'"Tags"'"']/@value">,'${str%Dead}'</append>'
	fi
done
-->
  <append xpath="/blocks/block[@name='plantedAloe1']/property[@name='Tags']/@value">,plantedAloe</append>
  <append xpath="/blocks/block[@name='plantedBlueberry1']/property[@name='Tags']/@value">,plantedBlueberry</append>
