  <append xpath="/blocks/block[@name='plantedHop1']/property[@name='Tags']/@value">,plantedHop</append>
  <append xpath="/blocks/block[@name='plantedPotato1']/property[@name='Tags']/@value">,plantedPotato</append>
  <append xpath="/blocks/block[@name='plantedYucca1']/property[@name='Tags']/@value">,plantedYucca</append>
  <append xpath="/blocks/block[@name='plantHedge']">
    <property name="Tags" value="plantHedge"/>
  </append>
