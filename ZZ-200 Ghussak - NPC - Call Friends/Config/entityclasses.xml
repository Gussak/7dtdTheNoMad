<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/entity_classes/entity_class[@name='playerMale']">
    <effect_group help="to make it easier to force a NPC follow you again">
      <triggered_effect trigger="onSelfJump" action="AddBuff" buff="buffOrderFollow" target="selfAOE" range="1.5" target_tags="npc">
        <requirement name="CVarCompare" target="other" cvar="Leader" operation="Equals" value="@EntityID"/>
        <requirement name="CVarCompare" cvar="_crouching" operation="Equals" value="1"/>
      </triggered_effect>
    </effect_group>
  </append>
  <csv xpath="/entity_classes/entity_class[@name='playerMale']/property[@name='ItemsOnEnterGame.GameModeSurvival' or @name='ItemsOnEnterGame.GameModeSurvivalSP' or @name='ItemsOnEnterGame.GameModeSurvivalMP']/@value" delim="," op="add">GSKspawnDogCompanion=9</csv>
  <csv xpath="/entity_classes/entity_class[@name='playerMale']/property[@name='ItemsOnEnterGame.GameModeSurvival' or @name='ItemsOnEnterGame.GameModeSurvivalSP' or @name='ItemsOnEnterGame.GameModeSurvivalMP']/@value" delim="," op="add" help="just enough meat to hire one dog">foodRawMeat=20</csv>
</GhussakTweaks>
