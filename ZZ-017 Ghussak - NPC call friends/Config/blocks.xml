<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/blocks">
	</append>
  <!-- HELPGOOD: These items that call NPCs shall NOT be craftable/spawned/createdByThePlayer in any way. They are like a exploration bonus. CODE: egrep "flagPole|PoolTable|candelabra|DogHouse" -i _NewestSavegamePath.IgnoreOnBackup/ConfigsDump/*.xml  -->
  <append xpath="/blocks/block[starts-with(@name,'flagPole')]" help="to summon soldiers: auto gun and good armor, very strong">
    <drop event="Harvest" name="GSKCallSoldier" count="2,3" tag="allHarvest" help="there are a few"/>
    <property name="SellableToTrader" value="false"/>
  </append>
  <append xpath="/blocks/block[@name='decoPoolTable']" help="to summon friends: melee, weak">
    <drop event="Harvest" name="GSKCallFriends" count="2,3" tag="allHarvest" help="there may have some"/>
    <property name="SellableToTrader" value="false"/>
  </append>
  <append xpath="/blocks/block[@name='candelabraLight' or @name='chandelierLight']" help="to summon friends: auto shotgun, strong">
    <property name="CanPickup" value="true"/>
    <drop event="Harvest" name="GSKCallHalowenParty" count="1,2" tag="allHarvest" help="there may have some"/>
    <property name="SellableToTrader" value="false"/>
  </append>
  <append xpath="/blocks/block[starts-with(@name,'decoClassicDogHouse')]" help="to summon friends: melee, weak">
    <property name="CanPickup" value="true"/>
    <drop event="Harvest" name="GSKCallTrustyDog" count="1,2" tag="allHarvest" help="you may find many"/>
    <property name="SellableToTrader" value="false"/>
  </append>
</GhussakTweaks>
