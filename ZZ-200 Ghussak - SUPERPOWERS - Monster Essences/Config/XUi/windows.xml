<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/windows/window[@name='HUDLeftStatBars']" help="drain pools">
    <rect name="drainHud" depth="50" anchor="RightTop" pos="225,100" width="300" side="right" controller="HUDStatBar">
      <label depth="0" pos="0,0" name="DrainedHP" width="100" height="20" pivot="left" justify="left" text="HP pool: {cvar(iGSKHitpointsPool:0)}" font_size="20" color="255,200,200,255" tooltip_key="xuiGSKDrainPool"/>
      <label depth="0" pos="0,-25" name="DrainedStam" width="150" height="20" pivot="left" justify="left" text="Stamina pool: {cvar(iGSKstaminaPool:0)}" font_size="20" color="200,200,255,255" tooltip_key="xuiGSKDrainPool"/>
      <label depth="0" pos="0,-50" name="EssencesStack" width="150" height="20" pivot="left" justify="left" text="Essences Stack: {cvar(iGSKEssenceStack:0)}" font_size="20" color="200,200,255,255" tooltip_key="xuiGSKDrainPool"/>
      <label depth="0" pos="0,-75" name="ShamanPower" width="300" height="20" pivot="left" justify="left" text="Shaman: Power {cvar(iGSKNearDeathShamanPowerLvl:0.00)} / Max {cvar(iGSKNearDeathShamanPowerLvlMax:0.00)} / Limit {cvar(iGSKShamanPowerLimit:0)}" font_size="20" color="200,200,255,255" tooltip_key="xuiGSKDrainPool"/>
    </rect>
  </append>
</GhussakTweaks>
