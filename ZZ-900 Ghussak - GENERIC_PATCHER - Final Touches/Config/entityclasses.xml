<?xml version="1.0"?>
<GhussakTweaks>
  <!--	HELPGOOD: for Stallionsdens Whisperers mod, so a top zombie that combines many of the below characteristics will have more reusable skins-->
  <append xpath="/entity_classes/entity_class[starts-with(@name, 'zombie') and contains(@name, 'feral')]">
    <drop event="Harvest" name="zombieSkin" tag="butcherHarvest" count="1"/>
  </append>
  <append xpath="/entity_classes/entity_class[starts-with(@name, 'zombie') and contains(@name, 'radiated')]">
    <drop event="Harvest" name="zombieSkin" tag="butcherHarvest" count="2"/>
  </append>
  <append xpath="/entity_classes/entity_class[starts-with(@name, 'zombie') and contains(@name, 'spider')]">
    <drop event="Harvest" name="zombieSkin" tag="butcherHarvest" count="1"/>
  </append>
  <append xpath="/entity_classes/entity_class[starts-with(@name, 'zombie') and contains(@name, 'scream')]">
    <drop event="Harvest" name="zombieSkin" tag="butcherHarvest" count="1"/>
  </append>
  <append xpath="/entity_classes/entity_class[starts-with(@name, 'zombie') and contains(@name, 'wight')]">
    <drop event="Harvest" name="zombieSkin" tag="butcherHarvest" count="1"/>
  </append>
  <append xpath="/entity_classes/entity_class[starts-with(@name, 'zombie') and contains(@name, 'mutant')]">
    <drop event="Harvest" name="zombieSkin" tag="butcherHarvest" count="1"/>
  </append>
  <append xpath="/entity_classes/entity_class[starts-with(@name, 'zombie') and contains(@name, 'fat')]">
    <drop event="Harvest" name="zombieSkin" tag="butcherHarvest" count="1"/>
  </append>
</GhussakTweaks>
