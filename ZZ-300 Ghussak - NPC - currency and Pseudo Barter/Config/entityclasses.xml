      <property name="Tags" value="entity,npc,human,trader,female,npcbarter"/>
      <property name="SizeScale" value="1.0"/>
      <property name="Mesh" value="@:Entities/Traders/Prefabs/TraderJen.prefab"/>
      <property name="NPCID" value="tradernpccurrency"/>
      <property name="DanceType" value="2"/>
      <property name="AITask-1" value="" data=""/>
      <property name="AITarget-1" value="" data=""/>
      <property name="IsEnemyEntity" value="false"/>
      <property name="ExperienceGain" value="0"/>
      <property name="TimeStayAfterDeath" value="1"/>
      <property name="DeadBodyHitPoints" value="0"/>
      <effect_group name="Base Effects">
        <passive_effect name="HealthMax" operation="base_set" value="3" help="so is easy to quick de-spawn it"/>
        <triggered_effect trigger="onSelfEnteredGame" action="AddBuff" target="self" buff="buffNPCBarterTimeout" help="doesnt work"/>
