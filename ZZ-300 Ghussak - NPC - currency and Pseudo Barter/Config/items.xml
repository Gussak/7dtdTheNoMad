<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/items">
    <item name="currencyNPC" help="do not create a recipe to convert this into casinoCoin as will lose the whole point of it">
      <property name="CustomIcon" value="casinoCoin"/>
      <property name="CustomIconTint" value="128,180,180"/>
      <property name="DescriptionKey" value="dkGSKCurrencyNPC"/>
      <property name="CreativeMode" value="Player"/>
      <property name="HoldType" value="45"/>
      <property name="Meshfile" value="@:Other/Items/Misc/sackPrefab.prefab"/>
      <property name="DropMeshfile" value="@:Other/Items/Misc/sack_droppedPrefab.prefab"/>
      <property name="Material" value="Morganic" help="just to prevent melting"/>
      <property name="Weight" value="1"/>
      <property name="Stacknumber" value="65535" help="as this shouldnt be craftable into anything else, and also being considered as virtual currency, shall not cause trouble to player inventory"/>
      <property name="EconomicValue" value="0"/>
      <property name="SellableToTrader" value="false"/>
    </item>
    <item name="GSKsummonNPCbarter">
      <property name="SellableToTrader" value="false"/>
      <property name="DescriptionKey" value="dkGSKSummonBarterNPC"/>
      <property name="Extends" value="GSKBaseActivatorReqMeleeSlow"/>
      <property name="CustomIcon" value="7dtdShockTip"/>
      <property name="CustomIconTint" value="220,150,128"/>
      <property name="Stacknumber" value="1"/>
      <effect_group tiered="false">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="CallGameEvent" event="eventGSKSpawnTraderNPCcurrency"/>
        <!-- HELPGOOD: this causes error flood on log
        <triggered_effect trigger="onSelfSecondaryActionEnd" action="ModifyStats" stat="Health" operation="add" value="-99999" target="selfAOE" range="60" target_tags="npcbarter" />
-->
        <triggered_effect trigger="onSelfSecondaryActionEnd" action="CallGameEvent" event="eventGSKDeSpawnTraderNPCcurrency"/>
      </effect_group>
    </item>
  </append>
  <append xpath="/items/item[@name='casinoCoin']" help="1 coin melts into 1 brass, the same of scrapBrass, so it's economic value shall be the same">
    <property name="EconomicValue" value="20"/>
    <property name="EconomicBundleSize" value="10"/>
    <property name="SellableToTrader" value="true"/>
  </append>
  <append xpath="/items/item[@name='GSKTNMstarterKit']/property[@class='Action0']/property[@name='Create_item']/@value">,currencyNPC,GSKsummonNPCbarter</append>
  <append xpath="/items/item[@name='GSKTNMstarterKit']/property[@class='Action0']/property[@name='Create_item_count']/@value">,666,1</append>
</GhussakTweaks>
