<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/items" help="base easy activators">
    <item name="GSKCFGAllowExtraBloodMoonSpawns">
      <property name="ItemTypeIcon" value="computer"/>
      <property name="Extends" value="GSKBaseActivatorReqMeleeConfiguratorFast"/>
      <property name="CustomIcon" value="7dtdBloodMoonBuffed"/>
      <property name="CustomIconTint" value="180,128,128"/>
      <property name="DescriptionKey" value="dkGSKAllowExtraBloodMoonSpawns"/>
      <effect_group tiered="false">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="iGSKAllowExtraBloodMoonSpawns" operation="set" value="2">
          <requirement name="CVarCompare" cvar="_crouching" operation="Equals" value="0"/>
        </triggered_effect>
        <triggered_effect trigger="onSelfSecondaryActionEnd" action="ModifyCVar" cvar="iGSKAllowExtraBloodMoonSpawns" operation="set" value="1">
          <requirement name="CVarCompare" cvar="_crouching" operation="Equals" value="0"/>
        </triggered_effect>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="iGSKCfgBMCountOnHoldLimit" operation="add" value="-1">
          <requirement name="CVarCompare" cvar="_crouching" operation="Equals" value="1"/>
        </triggered_effect>
        <triggered_effect trigger="onSelfSecondaryActionEnd" action="ModifyCVar" cvar="iGSKCfgBMCountOnHoldLimit" operation="add" value="1">
          <requirement name="CVarCompare" cvar="_crouching" operation="Equals" value="1"/>
        </triggered_effect>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar=".fGSKCFGTMPval1" operation="set" value="@iGSKAllowExtraBloodMoonSpawns"/>
        <triggered_effect trigger="onSelfSecondaryActionEnd" action="ModifyCVar" cvar=".fGSKCFGTMPval1" operation="set" value="@iGSKAllowExtraBloodMoonSpawns"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar=".fGSKCFGTMPval2" operation="set" value="@iGSKCfgBMCountOnHoldLimit"/>
        <triggered_effect trigger="onSelfSecondaryActionEnd" action="ModifyCVar" cvar=".fGSKCFGTMPval2" operation="set" value="@iGSKCfgBMCountOnHoldLimit"/>
      </effect_group>
    </item>
    <item name="GSKCFGExtraBloodMoonFoeLimit">
      <property name="ItemTypeIcon" value="computer"/>
      <property name="Extends" value="GSKBaseActivatorReqMeleeConfiguratorFast"/>
      <property name="CustomIcon" value="7dtdBloodMoonBuffed"/>
      <property name="DescriptionKey" value="dkGSKCFGExtraBloodMoonFoeLimit"/>
      <effect_group tiered="false">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="iGSKBMFoeAliveMax" operation="add" value="2"/>
        <triggered_effect trigger="onSelfSecondaryActionEnd" action="ModifyCVar" cvar="iGSKBMFoeAliveMax" operation="add" value="-2">
          <requirement name="CVarCompare" cvar="iGSKBMFoeAliveMax" operation="GTE" value="4" help="min is 2"/>
        </triggered_effect>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar=".fGSKCFGTMPval1" operation="set" value="@iGSKBMFoeAliveMax"/>
        <triggered_effect trigger="onSelfSecondaryActionEnd" action="ModifyCVar" cvar=".fGSKCFGTMPval1" operation="set" value="@iGSKBMFoeAliveMax"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar=".fGSKCFGTMPval2" operation="set" value="0"/>
        <triggered_effect trigger="onSelfSecondaryActionEnd" action="ModifyCVar" cvar=".fGSKCFGTMPval2" operation="set" value="0"/>
      </effect_group>
    </item>
  </append>
</GhussakTweaks>
