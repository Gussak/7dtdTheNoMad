<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/nav_object_classes">
    <nav_object_class name="navNPCfriendly" extends="navSimpleDot">
      <map_settings>
        <property name="color" value="0,0,180,255"/>
        <property name="has_pulse" value="false"/>
        <property name="text_type" value="Distance" help="TODO: doesnt work? always show the name.."/>
      </map_settings>
      <compass_settings help="because on map is difficult to look at as we can't zoom too much :(">
        <property name="min_distance" value="1000" help="just a trick to hide it and prevent too crowded compass"/>
        <!--HELPGOOD:
				<property name="color" value="0,0,180,255" />
				<property name="has_pulse" value="false" />
-->
      </compass_settings>
      <onscreen_settings>
        <property name="color" value="0,0,180,64"/>
        <property name="min_distance" value="6" help="they start following before this"/>
        <property name="max_distance" value="120" help="they get teleported if 60m far, but if they stay there you still easily see where they are"/>
        <property name="max_scale_distance" value="60" help="reaches max scale at this dist and keeps that scale til very near, right?"/>
        <property name="has_pulse" value="false"/>
        <property name="text_type" value="Name"/>
        <property name="offset" value="0,0,0"/>
        <property name="icon_clamped" value="false"/>
      </onscreen_settings>
    </nav_object_class>
    <nav_object_class name="navNPCbackPack" extends="navSimpleDot">
      <map_settings>
        <property name="sprite_name" value="ui_game_symbol_backpack"/>
        <property name="color" value="0,128,180,255"/>
        <property name="has_pulse" value="false"/>
        <property name="text_type" value="Distance" help="Distance shows nothing, but should be nothing, so using distance will show nothing TODO: can use None?"/>
      </map_settings>
      <compass_settings>
        <property name="min_distance" value="1000" help="just a trick to hide it and prevent too crowded compass"/>
      </compass_settings>
      <onscreen_settings>
        <property name="sprite_name" value="ui_game_symbol_backpack"/>
        <property name="color" value="0,128,180,255"/>
        <property name="min_distance" value="2" help="you are too close"/>
        <property name="max_distance" value="10" help="smelly backpacks.."/>
        <property name="max_scale_distance" value="60" help="reaches max scale at this dist and keeps that scale til very near, right?"/>
        <property name="has_pulse" value="false"/>
        <property name="text_type" value="None"/>
        <property name="offset" value="0,0,0"/>
        <property name="icon_clamped" value="false"/>
      </onscreen_settings>
    </nav_object_class>
    <nav_object_class name="navNPCbackPackHired" extends="navNPCbackPack">
      <map_settings>
        <property name="color" value="0,180,255,255"/>
        <property name="has_pulse" value="true"/>
      </map_settings>
      <compass_settings>
        <property name="min_distance" value="1000" help="just a trick to hide it and prevent too crowded compass"/>
      </compass_settings>
      <onscreen_settings>
        <property name="color" value="0,180,255,255"/>
        <property name="min_distance" value="2" help="you are too close"/>
        <property name="max_distance" value="1000" help="'where is my stuff!!' :)"/>
      </onscreen_settings>
    </nav_object_class>
  </append>
</GhussakTweaks>
