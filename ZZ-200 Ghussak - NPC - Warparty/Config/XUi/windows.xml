<?xml version="1.0"?>
<GhussakTweaks>
  <!--HELPGOOD: NPC info-->
  <append xpath="/windows" help="NPC info">
    <window name="HUDGSKNPCInfo">
      <rect name="hud" pos="10,0" width="1000" side="left" help="pos x of the elements below, shall be half width. sync all width and pos x, shall all be the same below. this main rect shall match all width too.">
        <filledsprite depth="1" pos="500,-60" width="1000" height="40" name="NPCInfoBkg" color="60,60,128,188" type="filled" fill="1.0" pivot="center" justify="center"/>
        <filledsprite depth="2" pos="500,-60" width="1000" height="41" name="NPCInfoBkgBorder" color="60,255,255,128" type="filled" fillcenter="false" fill="1.0" pivot="center" justify="center"/>
        <label depth="3" pos="500,-60" width="1000" height="40" name="NPCInfoLabel" pivot="center" justify="center" text="ID:{cvar(iGSKPlayerNPCIDCurrent:0)}(T:{cvar(iGSKPlayerNPCSpecialFollowCountCurrent:0)},F:{cvar(iGSKPlayerNPCFollowingCountCurrent:0)},W:{cvar(iGSKPlayerNPCWarpartyCountCurrent:0)}/N:{cvar(iGSKPlayerNPCNonHireableNearby:0)})MR:{cvar(.iGSKPlayerNPCInfoMeleeOrRanged:0)},Ammo:{cvar(.iGSKPlayerNPCInfoAmmoLeftPerc:0)}%,AD:{cvar(.iGSKPlayerNPCInfoArmorDmgPercent:0)}%,PAD:{cvar(.iGSKPlayerNPCInfoPermanentArmorDmg:0)}%,RA:{cvar(.iGSKPlayerNPCInfoRepairSelfArmor:0)}+{cvar(fRepairNPCArmor:0.00)}%,PD:{cvar(.iGSKPlayerNPCInfoSelfPreventDismissSecs:0)}+{cvar(fNPCPreventDismissSecs:0)}s,H+:{cvar(.iGSKPlayerNPCInfoHealingMedicine:0)},PA:{cvar(.iGSKPlayerNPCInfoHasCustomPowerArmor:0)},CO:{cvar(.iGSKPlayerNPCInfoOrdersHF:0)}/{cvar(.iGSKPlayerNPCInfoOrdersSC:0)},DS({cvar(.iGSKAllowNpcSneakingWorkaround:0)}):{cvar(.iGSKPlayerNPCInfoDenySneak:0)}+{cvar(iGSKPlayerAttackedDisableNPCSneakTime:0)}-{cvar(iGSKNPCSneakRmFoeProtCount:0)},ID:{cvar(.iGSKPlayerNPCInfoSpawnID:0)}" font_size="25" color="[green]" controller="HUDStatBar" tooltip_key="tkNPCInfo"/>
      </rect>
    </window>
  </append>
  <set xpath="/windows/window[@name='windowGroupBars' and @controller='PartyWindow']/grid[@name='hud']/@side" help="prevents confusion with the buffs that may be shown above the followers NPC list">right</set>
</GhussakTweaks>
