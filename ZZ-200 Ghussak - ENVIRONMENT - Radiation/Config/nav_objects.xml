<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/nav_object_classes">
    <nav_object_class name="radiationSource" extends="navSimpleDot">
      <property name="requirement_type" value="Tracking"/>
      <map_settings>
        <property name="sprite_name" value="NavObj_7dtdRadSource"/>
        <property name="color" value="128,128,128,255"/>
      </map_settings>
      <compass_settings>
        <property name="sprite_name" value="NavObj_7dtdRadSource"/>
        <property name="up_sprite_name" value="NavObj_7dtdRadSourceUp"/>
        <property name="down_sprite_name" value="NavObj_7dtdRadSourceDown"/>
        <property name="color" value="128,128,128,255"/>
      </compass_settings>
      <onscreen_settings>
        <property name="sprite_name" value="NavObj_7dtdRadSource"/>
        <property name="color" value="128,128,128,255"/>
      </onscreen_settings>
    </nav_object_class>
    <nav_object_class name="navDemolition" extends="navSimpleDot" help="because it causes a lot of structural chaos">
      <map_settings>
        <property name="color" value="180,0,0,255"/>
        <property name="has_pulse" value="true"/>
      </map_settings>
      <compass_settings>
        <property name="color" value="180,0,0,255"/>
        <property name="has_pulse" value="true"/>
      </compass_settings>
      <onscreen_settings>
        <property name="color" value="180,0,0,255"/>
        <property name="has_pulse" value="true"/>
      </onscreen_settings>
    </nav_object_class>
  </append>
</GhussakTweaks>
