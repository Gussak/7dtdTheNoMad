<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/nav_object_classes">
    <nav_object_class name="radiationSource">
      <property name="requirement_type" value="Tracking"/>
      <!-- HELPGOOD:TODO: none of these will load no matter where I place it, or the size of the image or the filename, and there is no log message for not found sprite files
				<property name="sprite_name" value="NavObj_7dtdRadSource" />
				<property name="up_sprite_name" value="NavObj_7dtdRadSourceUp" />
				<property name="down_sprite_name" value="NavObj_7dtdRadSourceDown" />

				<property name="color" value="128,128,128,255" />
-->
      <map_settings>
        <property name="sprite_name" value="ui_game_symbol_enemy_dot"/>
        <property name="min_distance" value="0"/>
        <property name="max_distance" value="90"/>
        <property name="color" value="0,180,0,255"/>
        <property name="has_pulse" value="true"/>
        <property name="icon_clamped" value="false"/>
      </map_settings>
      <compass_settings>
        <property name="sprite_name" value="ui_game_symbol_enemy_dot"/>
        <property name="up_sprite_name" value="ui_game_symbol_enemy_dot_up"/>
        <property name="down_sprite_name" value="ui_game_symbol_enemy_dot_down"/>
        <property name="min_distance" value="0"/>
        <property name="max_distance" value="45"/>
        <property name="max_scale_distance" value="32"/>
        <property name="color" value="0,180,0,255"/>
        <property name="has_pulse" value="false"/>
        <property name="icon_clamped" value="false"/>
      </compass_settings>
      <onscreen_settings>
        <property name="sprite_name" value="ui_game_symbol_enemy_dot"/>
        <property name="min_distance" value="3"/>
        <property name="max_distance" value="30"/>
        <property name="color" value="0,180,0,255"/>
        <property name="has_pulse" value="true"/>
        <property name="text_type" value="Distance"/>
        <property name="offset" value="0,0,0"/>
        <property name="icon_clamped" value="false"/>
      </onscreen_settings>
    </nav_object_class>
    <nav_object_class name="navNPCfriendly" extends="radiationSource">
      <map_settings>
        <property name="color" value="0,0,255,255"/>
        <property name="has_pulse" value="false"/>
      </map_settings>
      <compass_settings>
        <property name="min_distance" value="1000" help="just a trick to hide it"/>
      </compass_settings>
      <onscreen_settings>
        <property name="min_distance" value="1000" help="just a trick to hide it"/>
      </onscreen_settings>
    </nav_object_class>
    <nav_object_class name="navDeusExCalm" extends="radiationSource">
      <map_settings>
        <property name="color" value="0,0,180,255"/>
        <property name="has_pulse" value="false"/>
      </map_settings>
      <compass_settings>
        <property name="color" value="0,0,180,255"/>
        <property name="has_pulse" value="false"/>
      </compass_settings>
      <onscreen_settings>
        <property name="color" value="0,0,180,255"/>
        <property name="has_pulse" value="false"/>
      </onscreen_settings>
    </nav_object_class>
    <nav_object_class name="navDeusExInRage" extends="radiationSource">
      <map_settings>
        <property name="color" value="180,0,0,255"/>
        <property name="has_pulse" value="true"/>
      </map_settings>
      <compass_settings>
        <property name="color" value="180,0,0,255"/>
        <property name="has_pulse" value="true"/>
      </compass_settings>
      <onscreen_settings>
        <property name="color" value="180,0,0,255"/>
        <property name="has_pulse" value="true"/>
      </onscreen_settings>
    </nav_object_class>
    <nav_object_class name="navDeusExLoot" extends="radiationSource">
      <map_settings>
        <property name="color" value="0,180,180,255"/>
        <property name="has_pulse" value="true"/>
      </map_settings>
      <compass_settings>
        <property name="color" value="0,180,180,255"/>
        <property name="has_pulse" value="true"/>
      </compass_settings>
      <onscreen_settings>
        <property name="color" value="0,180,180,255"/>
        <property name="has_pulse" value="true"/>
      </onscreen_settings>
    </nav_object_class>
  </append>
  <append xpath="/nav_object_classes/nav_object_class[@name='animaltracking_rabbit']">
    <map_settings>
      <property name="color" value="255,255,0,255"/>
    </map_settings>
    <compass_settings>
      <property name="color" value="255,255,0,255"/>
    </compass_settings>
    <onscreen_settings>
      <property name="color" value="255,255,0,255"/>
    </onscreen_settings>
  </append>
  <append xpath="/nav_object_classes/nav_object_class[@name='bicycle']">
    <map_settings>
      <property name="sprite_name" value="ui_game_symbol_bicycle"/>
      <property name="min_distance" value="0"/>
