    <map_settings>
      <property name="sprite_name" value="ui_game_symbol_junk_turret"/>
    </map_settings>
  </append>
  <append xpath="/nav_object_classes/nav_object_class[@name='junk_sledge']">
    <map_settings>
      <property name="sprite_name" value="ui_game_symbol_junk_sledge"/>
    </map_settings>
  </append>
  <set xpath="/nav_object_classes/nav_object_class[@name='player']/map_settings/property[@name='color']" help="FAILED: to be easier to distinguish among the other icons we are placing on the map like workbench, bathtub, ok etc">0,255,255,255</set>
  <append xpath="/nav_object_classes/nav_object_class[@name='player']/map_settings">
    <property name="depth_offset" value="50" help="FAILED?"/>
    <property name="sprite_size" value="64" help="FAILED?"/>
  </append>
  <append xpath="/nav_object_classes/nav_object_class[@name='quick_waypoint']/map_settings" help="easier to see on max zoom out">
    <property name="sprite_size" value="64" help="FAILED?"/>
  </append>
</GhussakTweaks>
