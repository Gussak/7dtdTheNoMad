<GhussakTweaks>
	
	<append xpath="/gameevents">
		
		<action_sequence name="eventGSKSpawnTraderNPCcurrency">
			<action class="SpawnEntity">
				<property name="spawn_type" value="NearTarget" />
<!--
failed?
				<property name="spawn_type" value="Position" />
-->
				<property name="entity_names" value="npcTraderNPCcurrency" param1="strNameList"/>
				<property name="spawn_count" value="1" param1="iCount"/>
				<property name="safe_spawn" value="true" help="was true."/>
				<property name="spawn_from_position" value="true" />
				<property name="min_distance" value="1" param1="iDistMin"/>
				<property name="max_distance" value="2" param1="iDistMax"/>
				<property name="yOffset" value="0" param1="iElevationOffset"/>
				<property name="air_spawn" value="false" param1="bFlying" help="WORKAROUND: using air spawn always because if you on top of a building the zombies wont spawn until you get down right?"/>
			</action>
		</action_sequence>
		
		<action_sequence name="eventGSKDeSpawnTraderNPCcurrency">
			<action class="AddEntitiesToGroup">
				<property name="phase" value="0" />
				<property name="entity_tags" value="npcbarter" />
				<property name="group_name" value="barterNPC" />
				<property name="max_distance" value="60" />
				<property name="y_height" value="50" help="only upwards or up and down? is a box or a cylinder?"/>
			</action>
			<action class="RemoveEntities">
				<property name="phase" value="10" />
				<property name="target_group" value="barterNPC" />
			</action>
		</action_sequence>
		
	</append>
	
</GhussakTweaks>
