<?xml version="1.0"?>
<GhussakTweaks>
  <!--
	HELPGOOD: corpses
-->
  <append xpath="/entity_classes/entity_class[contains(@name, 'animal')]" help="only enough to have still edible harvest">
    <property name="TimeStayAfterDeath" value="3600"/>
  </append>
  <append xpath="/entity_classes/entity_class[contains(@name, 'animalZombie')]" help="their flesh is contamined by zombie virus and will last much longer">
    <property name="TimeStayAfterDeath" value="7200"/>
  </append>
  <!-- HELPGOOD: it is now possible to place blocks over corpses
  <set xpath="/entity_classes/entity_class[starts-with(@name,'zombie')]/property[@name='TimeStayAfterDeath']/@value" help="INVERSE LOGIC: as we can't push zombie corpses away, this makes them unblock an area that can be used to place a proper barricade block">6</set>
-->
  <!--
  HELPGOOD: loot drops
-->
  <set xpath="/entity_classes/entity_class[contains(@name, 'EntityLoot')]/property[contains(@name, 'TimeStayAfterDeath')]/@value">36000</set>
  <set xpath="/entity_classes/entity_class[contains(@name, 'Backpack')]/property[contains(@name, 'TimeStayAfterDeath')]/@value">72000</set>
  <set xpath="/entity_classes/entity_class[contains(@name, 'DroppedLootContainer')]/property[contains(@name, 'TimeStayAfterDeath')]/@value">72000</set>
</GhussakTweaks>
