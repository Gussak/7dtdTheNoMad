<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/items">
    <item name="GSKPOIProgressInc">
      <property name="Extends" value="GSKBaseActivatorConsumableFast"/>
      <property name="SellableToTrader" value="false"/>
      <property name="DropMeshfile" value="@:Other/Items/Food/masonJarWaterPrefab.prefab" help="this calls more attention than sack"/>
      <property name="DescriptionKey" value="dkGSKPOIProgressInc"/>
      <effect_group tiered="false">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="iGSKexplorationProgressPOIcount" operation="add" value="1"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="iGSKexplorationCredits" operation="add" value="randomInt(750,1250)"/>
      </effect_group>
    </item>
    <item name="GSKPOIProgressUndergroundPOIsInc">
      <property name="Extends" value="GSKBaseActivatorConsumableFast"/>
      <property name="SellableToTrader" value="false"/>
      <property name="DropMeshfile" value="@:Other/Items/Food/masonJarWaterPrefab.prefab" help="this calls more attention than sack"/>
      <property name="DescriptionKey" value="dkGSKPOIProgressInc"/>
      <effect_group tiered="false">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="iGSKExplrUndPOIcredit" operation="add" value="1"/>
      </effect_group>
    </item>
    <item name="GSKPOIRwdUndTeleToSky">
      <property name="Extends" value="GSKTRBaseBundle"/>
      <property name="CustomIcon" value="7dtdShockTip"/>
      <property name="CustomIconTint" value="200,200,100"/>
      <property name="ItemTypeIcon" value="treasure"/>
      <property name="DescriptionKey" value="dkGSKPOIRwdUndTeleToSky"/>
      <property class="Action0">
        <requirement name="CVarCompare" cvar="iGSKExplrUndPOIcredit" operation="GTE" value="10"/>
        <property name="Create_item" value="GSKteleToSkyFreeAndSafeCall"/>
        <property name="Create_item_count" value="1"/>
        <property name="Delay" value="0.25"/>
        <property name="Use_time" value="0.25"/>
        <property name="Sound_start" value="nightvision_toggle"/>
      </property>
      <effect_group tiered="false">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" target="self" cvar="iGSKExplrUndPOIcredit" operation="add" value="-10"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="CallGameEvent" event="eventGSKSpwCourier"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ShowToolbeltMessage" message="[TNM] A courier brings the package to you."/>
      </effect_group>
    </item>
    <item name="GSKPOIRwdUndTeleUnderground">
      <property name="Extends" value="GSKTRBaseBundle"/>
      <property name="CustomIcon" value="7dtdShockTip"/>
      <property name="CustomIconTint" value="200,200,100"/>
      <property name="ItemTypeIcon" value="treasure"/>
      <property name="DescriptionKey" value="dkGSKPOIRwdUndTeleUnderground"/>
      <property class="Action0">
        <requirement name="CVarCompare" cvar="iGSKExplrUndPOIcredit" operation="GTE" value="15" help="high cost as it may be used just before the bloodmoon begins, so it is very powerful if the terrain is rocky as zombs will take a long time to dig"/>
        <property name="Create_item" value="GSKElctrnTeleportUndergroundFreeAndSafeCall"/>
        <property name="Create_item_count" value="1"/>
        <property name="Delay" value="0.25"/>
        <property name="Use_time" value="0.25"/>
        <property name="Sound_start" value="nightvision_toggle"/>
      </property>
      <effect_group tiered="false">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" target="self" cvar="iGSKExplrUndPOIcredit" operation="add" value="-15"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="CallGameEvent" event="eventGSKSpwCourier"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ShowToolbeltMessage" message="[TNM] A courier brings the package to you."/>
      </effect_group>
    </item>
    <item name="GSKPOIRwdUndTeleBiome">
      <property name="Extends" value="GSKTRBaseBundle"/>
      <property name="CustomIcon" value="7dtdShockTip"/>
      <property name="CustomIconTint" value="200,200,100"/>
      <property name="ItemTypeIcon" value="treasure"/>
      <property name="DescriptionKey" value="dkGSKPOIRwdUndTeleBiome"/>
      <property class="Action0">
        <requirement name="CVarCompare" cvar="iGSKExplrUndPOIcredit" operation="GTE" value="5"/>
        <property name="Create_item" value="GSKElctrnTeleportToBiomeFreeAndSafeCall"/>
        <property name="Create_item_count" value="1"/>
        <property name="Delay" value="0.25"/>
        <property name="Use_time" value="0.25"/>
        <property name="Sound_start" value="nightvision_toggle"/>
      </property>
      <effect_group tiered="false">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" target="self" cvar="iGSKExplrUndPOIcredit" operation="add" value="-5"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="CallGameEvent" event="eventGSKSpwCourier"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ShowToolbeltMessage" message="[TNM] A courier brings the package to you."/>
      </effect_group>
    </item>
  </append>
</GhussakTweaks>
