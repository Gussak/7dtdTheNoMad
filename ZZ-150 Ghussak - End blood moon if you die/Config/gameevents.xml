<GhussakTweaks>
	<append xpath="/gameevents">
		<action_sequence name="eventGSKadvanceTimeOnce">
<!-- HELPGOOD: could just be this?
			<action class="TimeChange">
				<property name="time_preset" value="NextMorning" />
				<property name="time" value="0" />
			</action>
-->
			<action class="TimeChange" help="in game minutes, ends up in a non precise result end hour, that may be a nice thing :)">
				<property name="time_preset" value="Current" />
				<property name="time" value="5-15" />
			</action>
		</action_sequence>
		
		<action_sequence name="eventGSKrewindTimeOnce">
			<action class="TimeChange" help="in game minutes">
				<property name="time_preset" value="Current" />
				<property name="time" value="-60" help="? TODO: negative value becomes absolute positive value now. Try to have a slow time, so time will be slowed for a few realtime minutes to last 1 game hour (or 6 game hours below)"/>
			</action>
		</action_sequence>
		<action_sequence name="eventGSKrewindTimeOnceX6">
			<action class="TimeChange" help="in game minutes">
				<property name="time_preset" value="Current" />
				<property name="time" value="-360" />
			</action>
		</action_sequence>
		
	</append>
</GhussakTweaks>
