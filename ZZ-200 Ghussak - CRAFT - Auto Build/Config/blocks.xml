<?xml version="1.0"?>
<GhussakTweaks>
  <append xpath="/blocks">
    <block name="AutoBuild:MiniFortress" help="basically you can jump on the ladder, climb and hide from ranged enemies in a strong structure, just to be too confident..">
      <property name="CustomIcon" value="7dtdShockTip"/>
      <property name="Group" value="Building,advBuilding"/>
      <property name="Tags" value="steel"/>
      <property name="Material" value="Msteel"/>
      <property name="Texture" value="110"/>
      <property name="UiBackgroundTexture" value="356"/>
      <property name="CreativeMode" value="Player"/>
      <property name="IsDistantDecoration" value="true"/>
      <property class="RepairItems">
        <property name="resourceForgedSteel" value="10"/>
      </property>
      <drop event="Harvest" name="resourceForgedSteel" count="10" tag="allHarvest"/>
      <property name="Class" value="PlantGrowing"/>
      <property name="PlantGrowing.IsGrowOnTopEnabled" value="true"/>
      <property name="PlantGrowing.Next" value="steelShapes:railing"/>
      <property name="PlantGrowing.GrowOnTop" value="autoBuildMiniFortress2"/>
      <property name="PlantGrowing.FertileLevel" value="0"/>
      <property name="PlantGrowing.GrowthRate" value="0.05" help="engine is 20 ticks/s AFAIK"/>
      <property name="PlantGrowing.IsRandom" value="false"/>
      <property name="PlantGrowing.LightLevelStay" value="0"/>
    </block>
    <block name="autoBuildMiniFortress2">
      <property name="Extends" value="AutoBuild:MiniFortress"/>
      <property name="PlantGrowing.Next" value="steelShapes:railing"/>
      <property name="PlantGrowing.GrowOnTop" value="autoBuildMiniFortress3"/>
    </block>
    <block name="autoBuildMiniFortress3">
      <property name="Extends" value="AutoBuild:MiniFortress"/>
      <property name="PlantGrowing.Next" value="steelShapes:ladderSquare"/>
      <property name="PlantGrowing.GrowOnTop" value="autoBuildMiniFortress4"/>
    </block>
    <block name="autoBuildMiniFortress4">
      <property name="Extends" value="AutoBuild:MiniFortress"/>
      <property name="PlantGrowing.Next" value="steelShapes:cube1mHole"/>
      <property name="PlantGrowing.GrowOnTop" value="autoBuildMiniFortress5"/>
    </block>
    <block name="autoBuildMiniFortress5">
      <property name="Extends" value="AutoBuild:MiniFortress"/>
      <property name="PlantGrowing.Next" value="steelShapes:cube1mHole"/>
      <property name="PlantGrowing.GrowOnTop" value="vaultHatch01"/>
    </block>
  </append>
</GhussakTweaks>
